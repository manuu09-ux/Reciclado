<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeFragment"
    android:padding="@dimen/padding_screen">

    <!-- Contenedor desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Saludo al usuario -->
            <TextView
                android:id="@+id/text_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido a Reciclo!"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_element"
                android:gravity="center"
                android:textAlignment="center" />

            <!-- Actividades recientes -->
            <TextView
                android:id="@+id/text_recent_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividades recientes"
                android:textSize="@dimen/text_medium"
                android:layout_marginBottom="@dimen/margin_small" />

            <!-- Lista de actividades recientes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRecentActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_element" />

            <!-- Recomendaciones de reciclaje -->
            <TextView
                android:id="@+id/text_recommendations_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recomendaciones de reciclaje"
                android:textSize="@dimen/text_medium"
                android:layout_marginBottom="@dimen/margin_small" />

            <!-- RecyclerView para recomendaciones -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRecommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:layout_marginBottom="@dimen/margin_element" />

            <!-- ProgressBar para mostrar mientras se cargan las recomendaciones -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_element"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Compartir"
                    android:textColor="@color/celta_color"
                    android:backgroundTint="@color/background_color"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />

                <Button
                    android:id="@+id/button_contribute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contribuir"
                    android:textColor="@color/celta_color"
                    android:backgroundTint="@color/background_color"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:elevation="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>